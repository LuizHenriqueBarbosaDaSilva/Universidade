@model Universidade.Models.Aluno

@{
    ViewData["Title"] = "Editar Aluno";
}

<h2>Editar Aluno</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Matricula"></label>
        <input asp-for="Matricula" class="form-control" />
        <span asp-validation-for="Matricula" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Data"></label>
        <input asp-for="Data" class="form-control" type="date" />
        <span asp-validation-for="Data" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Disciplinas</label>
        @foreach (var disciplina in ViewBag.Disciplinas)
        {
            <div class="form-check">
                <input type="checkbox" name="disciplinasSelecionadas" value="@disciplina.Id"
                @(disciplina.Selecionado ? "checked" : "") class="form-check-input" />
                <label class="form-check-label">@disciplina.Nome</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}